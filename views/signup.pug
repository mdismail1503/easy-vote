doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='/css/signup-style.css')
    link(rel='shortcut icon' type='image/png' href='/img/justice.png')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
    title Signup Form
    style.
      .hidden {
      display: none;
     }
  body
   
   
   .form-container
    h1  SIGN UP FORM
    br
    form.signup-form(action='/sign-up-complete' method='post')
     label(for='name') Name:
     input#name(type='text' name='name' required='')
     br
     label(for='email') Email:
     input#email(type='email' name='email' required='')
     br
     label(for='password') Password:
     input#password(type='password' name='password' required='')
     br
     label(for='confirm-password') Confirm Password:
     input#confirm-password(type='password' name='confirm-password' required='')
     br
     br
     label Role:
     input.radio#user(type='radio' name='role' value='user' checked='' onchange='toggleTextField("user")')
     
     label(for='user') USER
     input.radio#admin(type='radio' name='role' value='admin' onchange='toggleTextField("admin")')
     label(for='admin') ADMIN
     #textFieldContainer.hidden 
      label(for='textField') Admin Secret: 
      input#textField(type='password' placeholder="please enter admin secret here..")

     
     br
     br
     button(type='submit' onclick='displayRadioValue()') SUBMIT

  script(src='/js/signup.js')